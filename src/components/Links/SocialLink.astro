---
import Instagram from "../Icons/Instagram.astro";
import Facebook from "../Icons/Facebook.astro";
import Whatsapp from "../Icons/Whatsapp.astro";

interface Props {
	title: string;
    link: string;
    details: string;
}

const { title, link, details } = Astro.props;

// Funci√≥n para determinar si el enlace es de Instagram o Facebook
const isInstagram = link.includes("instagram.com");
const isFacebook = link.includes("facebook.com");
const isWhatsapp = link.includes("wa.link");
---

<a href={ link } target="_blank" 
    class={`block p-3 rounded-lg ${isWhatsapp ? "bg-green" : "bg-gradient-to-r from-yellowburn to-orangeburn"}`}>
    <div class="flex items-center justify-between text-white">
      <div>
        <p class="text-lg font-semibold">{ title }</p>
        <p class="text-sm text-grayash">{ details }</p>
      </div>
      
      <div class="h-7 w-7 ml-2">
        {isInstagram && <Instagram />}
        {isFacebook && <Facebook />}
        {isWhatsapp && <Whatsapp />}
      </div>
    </div>
</a>