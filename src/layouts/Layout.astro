---
import { ViewTransitions } from 'astro:transitions';
import '@fontsource-variable/lexend';
import NavBar from '../components/NavBar.astro';
import MainFoot from '../components/MainFoot.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="icon" type="image/x-icon" href="/img/icon.ico" />
		<meta name="description" content="Sanar es Bienestar es el lugar donde le podrás decir adiós al dolor. Con nuestros expertos fisioterapeutas podras recuperarte, tratarte y tratar tus tejidos blando de forma profesional. Los mejores profesionales de Bogota Colombia" />
		<meta name="keywords" content="Sanar, Bienestar, Fisioterapia, Fisioterapeutas, Fisioterapia en Bogota, Fisioterapia en Bogota, Fisioterapia en Bogota, Benying Szetu" />
		<meta name="author" content="GorigamiDev gorigami.xyz" />
		<meta name="robots" content="index, follow" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<NavBar />
			<main id="container">
				<slot />
			</main>
		<MainFoot />
	</body>
</html>
<style is:global>
	:root{
		--white-background: #eff1f2;
	}
	body {
		font-family: 'Lexend Variable', sans-serif;
	}
	html{
		background: var(--white-background);
		font-family: ;
	}
</style>
